<launch>

  <arg name="scan_topic" default="laserscan" />

  <node pkg="gmapping" type="slam_gmapping" name="jimmbot_slam_gmapping">
    <rosparam>
      odom_frame: odom
      base_frame: base_link
      map_frame: map

      map_update_interval: 0.5

      maxUrange: 5.5
      maxRange: 6.1
      particles: 100

      # Update frequencies
      linearUpdate: 0.3
      angularUpdate: 0.5
      temporalUpdate: 2.0
      resampleThreshold: 0.5

      # Initial Map Size
      xmin: -100.0
      ymin: -100.0
      xmax: 100.0
      ymax: 100.0
      delta: 0.05

      # All default
      sigma: 0.05
      kernelSize: 1
      lstep: 0.05
      astep: 0.05
      iterations: 5
      lsigma: 0.075
      ogain: 3.0
      lskip: 0
      llsamplerange: 0.01
      llsamplestep: 0.01
      lasamplerange: 0.005
      lasamplestep: 0.005
    </rosparam>
    <remap from="scan" to="$(arg scan_topic)"/>
  </node>

  <arg default="$(find jimmbot_viz)/rviz/jimmbot_gmapping.rviz" name="rvizconfig" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)"/>

</launch>